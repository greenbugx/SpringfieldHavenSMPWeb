  },
  {
    title: "Community Focused",
    description: "Active and friendly community where players help each other and build together.",
    icon: "üë•"
  },
  {
    title: "Regular Events",
    description: "Weekly building competitions, treasure hunts, and special seasonal events.",
    icon: "üéÆ"
  },
  {
    title: "Fair Play",
    description: "Strong anti-cheat and grief protection to ensure a fair playing field for everyone.",
    icon: "‚öñÔ∏è"
  }
];

const staffMembers = [
  {
    name: "PlayerOne",
    role: "Owner",
    description: "Server founder and main administrator"
  },
  {
    name: "PlayerTwo",
    role: "Admin",
    description: "Community manager and event organizer"
  },
  {
    name: "PlayerThree",
    role: "Moderator",
    description: "Helps maintain server rules and assists players"
  }
