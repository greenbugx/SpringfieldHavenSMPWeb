---
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/navigation/Navbar.astro';
import Footer from '../components/navigation/Footer.astro';
import ScrollAnimation from '../components/shared/ScrollAnimation.astro';

const serverFeatures = [
  {
    title: "Survival Experience",
    description: "Pure survival gameplay with minimal plugins to enhance your experience without breaking vanilla mechanics.",
