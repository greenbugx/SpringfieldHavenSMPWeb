---
interface Props {
  title: string;
  description?: string;
}
import '../styles/global.css'

const { title, description = "Join our Minecraft SMP server today!" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description}>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title} | Springfield Haven SMP</title>
  </head>
  <body class="bg-stone-900 text-gray-100 min-h-screen flex flex-col">
    <slot name="header" />
    <main class="flex-grow">
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>