---
import { Image } from 'astro:assets';
import image1 from '../../assets/03aa1970-27f4-4506-9891-32b2cb755572.png';
import image2 from '../../assets/8d116492-9f57-4671-98c9-eacededb42fa.png';
import image3 from '../../assets/49946c8e-405c-4bfe-a8b2-1f70d968cee2.png';
import image4 from '../../assets/a68753a5-78c8-4167-a981-13c69dc9e643.png';

const images = [
  { src: image1, alt: "Player Build 1" },
  { src: image2, alt: "Player Build 2" },
  { src: image3, alt: "Player Build 3" },
  { src: image4, alt: "Player Build 4" }
];
---

<section class="py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-12 text-mcgreen">Featured Builds</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {images.map((image, index) => (
        <div class="group relative overflow-hidden rounded-lg cursor-pointer">
          <Image 
            src={image.src} 
            alt={image.alt}
            class="w-full h-48 object-cover transform group-hover:scale-110 transition-transform duration-300"
          />
          <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
            <span class="text-white font-semibold">View Build</span>
          </div>
        </div>
      ))}
    </div>
    <div class="text-center mt-8">
      <a href="/gallery" class="inline-block bg-mcgreen hover:bg-mcwood text-white font-bold py-3 px-8 rounded-lg transition-colors">
        View All Builds
      </a>
    </div>
  </div>
</section>