---
interface Props {
  id: string;
  title: string;
  date: string;
  content: string;
}

const { id, title, date, content } = Astro.props;
---

<div id={id} class="fixed inset-0 bg-black/30 backdrop-blur-md hidden flex items-center justify-center z-50">
  <div class="bg-stone-800 rounded-lg p-8 max-w-2xl w-full mx-4 relative transform transition-all">
    <button 
      class="absolute top-4 right-4 text-gray-400 hover:text-mcgreen transition-colors"
      onclick={`document.getElementById('${id}').classList.add('hidden')`}
    >
      <svg class="w-6 h-6 cursor-pointer" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    
    <div class="space-y-4">
      <div class="text-mcstone text-sm">
        <p>Date: {date}</p>
      </div>
      
      <h2 class="text-2xl font-bold text-white">{title}</h2>
      
      <div class="text-gray-300">
        <p>{content}</p>
      </div>
    </div>
  </div>
</div>

<script>
  // Close modal when clicking outside
  document.addEventListener('click', (e) => {
    const modal = document.getElementById('${id}');
    if (e.target === modal) {
      modal?.classList.add('hidden');
    }
  });
</script>